# Database Configuration
DB_TYPE=postgres
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=your_db_username
DB_PASSWORD=your_db_password
DB_NAME=mbands_db
DATABASE_URL=postgresql://your_db_username:your_db_password@localhost:5432/mbands_db

# Database Connection Pool Configuration
# Maximum number of connections in the pool
# Development: 10, Production: 20-50 (depends on server resources and load)
DB_POOL_MAX=10

# Minimum number of connections to maintain
# Keeps connections warm for faster query response
DB_POOL_MIN=2

# Time (ms) a connection can be idle before being closed
# Production: 30000 (30s), Development: 10000 (10s)
DB_POOL_IDLE=30000

# Time (ms) to wait for a connection before throwing an error
DB_POOL_TIMEOUT=10000

# Maximum times a connection can be reused before being recycled
DB_POOL_MAX_USES=7500

# Maximum time (ms) a query can run before being terminated
DB_STATEMENT_TIMEOUT=30000

# Application name shown in PostgreSQL logs and pg_stat_activity
DB_APP_NAME=mbands-api

# Number of reconnection attempts if connection is lost
DB_RETRY_ATTEMPTS=10

# Delay (ms) between reconnection attempts
DB_RETRY_DELAY=3000

# Maximum query execution time (ms) before logging a warning
DB_MAX_QUERY_TIME=5000

# SSL Configuration (for production)
DB_SSL=false
DB_SSL_REJECT_UNAUTHORIZED=true
# DB_SSL_CA=/path/to/ca-cert.pem
# DB_SSL_KEY=/path/to/client-key.pem
# DB_SSL_CERT=/path/to/client-cert.pem

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production

# Application Configuration
NODE_ENV=development
PORT=3000
FRONTEND_URL=http://localhost:3000

# Rate Limiting Configuration (optional, defaults are set in code)
THROTTLE_TTL=60000
THROTTLE_LIMIT=100

# Security Configuration
BCRYPT_ROUNDS=10
